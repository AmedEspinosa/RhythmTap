<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainGame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".GameActivity">


    <FrameLayout
        android:layout_width="192dp"
        android:layout_height="28dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="111dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="591dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/shadow2TimeLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_black"
            android:text="@string/time_left"
            android:textColor="#2C1C1C"
            android:textSize="21sp"
            android:translationY="3dp" />

        <TextView
            android:id="@+id/shadow1TimeLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_black"
            android:text="@string/time_left"
            android:textColor="#4E3A3A"
            android:textSize="21sp"
            android:translationY="1dp" />

        <TextView
            android:id="@+id/timeLeftText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_black"
            android:text="@string/time_left"
            android:textColor="#FFFFFF"
            android:textSize="21sp" />
    </FrameLayout>


    <ImageButton
        android:id="@+id/pauseButton"
        android:layout_width="69dp"
        android:layout_height="64dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="272dp"
        android:layout_marginBottom="650dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/pause_button"
        android:src="@drawable/pause_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <FrameLayout
        android:layout_width="166dp"
        android:layout_height="31dp"
        android:layout_marginStart="203dp"
        android:layout_marginBottom="699dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/shadow2Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_black"
            android:text="@string/score_1234567"
            android:textColor="#2C1C1C"
            android:textSize="21sp"
            android:translationY="2dp" />

        <TextView
            android:id="@+id/shadow1Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_black"
            android:text="@string/score_1234567"
            android:textColor="#4E3A3A"
            android:textSize="21sp"
            android:translationY="0.5dp" />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_black"
            android:text="@string/score_1234567"
            android:textColor="#FFFFFF"
            android:textSize="21sp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="80dp"
        android:layout_height="31dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="228dp"
        android:layout_marginBottom="698dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/shadow2Level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_black"
            android:text="@string/lvl_1"
            android:textColor="#2C1C1C"
            android:textSize="21sp"
            android:translationY="2dp" />

        <TextView
            android:id="@+id/shadow1Level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_black"
            android:text="@string/lvl_1"
            android:textColor="#4E3A3A"
            android:textSize="21sp"
            android:translationY="0.5dp" />

        <TextView
            android:id="@+id/levelTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_black"
            android:text="@string/lvl_1"
            android:textColor="#FFFFFF"
            android:textSize="21sp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="115dp"
        android:layout_height="64dp"
        android:layout_marginStart="127dp"
        android:layout_marginTop="139dp"
        android:layout_marginEnd="126dp"
        android:layout_marginBottom="527dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/shadow2Timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_black"
            android:text="@string/_0_30_"
            android:textColor="#2C1C1C"
            android:textSize="48sp"
            android:translationY="6dp" />

        <TextView
            android:id="@+id/shadow1Timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_black"
            android:text="@string/_0_30_"
            android:textColor="#4E3A3A"
            android:textSize="48sp"
            android:translationY="3dp" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_black"
            android:text="@string/_0_30_"
            android:textColor="#FFFFFF"
            android:textSize="48sp" />
    </FrameLayout>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:layout_gravity="center"
        android:layout_marginStart="55dp"
        android:layout_marginTop="249dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="142dp"
        android:padding="16dp"
        app:alignmentMode="alignMargins"
        app:columnCount="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.236"
        app:rowCount="16" />


    <RelativeLayout
        android:layout_width="165dp"
        android:layout_height="72dp"


        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/freezePowerUp"
            android:layout_width="48dp"
            android:layout_height="60dp"
            android:layout_marginStart="25dp"
            android:background="@drawable/rounded_background_blue"
            android:contentDescription="@string/freeze_icon"
            android:src="@drawable/ic_freeze" />


        <TextView
            android:id="@+id/freezeCount"
            android:layout_width="22dp"
            android:layout_height="23dp"
            android:layout_below="@id/freezePowerUp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="-13dp"
            android:background="@drawable/circle_red"
            android:fontFamily="@font/roboto_black"
            android:text="@string/freezeCountNum"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="13sp" />


        <ImageView
            android:id="@+id/clearPowerUp"
            android:layout_width="48dp"
            android:layout_height="60dp"
            android:layout_marginStart="72dp"
            android:background="@drawable/rounded_background_red"
            android:contentDescription="@string/clear_icon"
            android:src="@drawable/ic_clear" />


        <TextView
            android:id="@+id/clearCount"
            android:layout_width="22dp"
            android:layout_height="23dp"
            android:layout_below="@id/clearPowerUp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="-13dp"
            android:background="@drawable/circle_red"
            android:fontFamily="@font/roboto_black"
            android:text="@string/clearCountNum"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="13sp" />


        <ImageView
            android:id="@+id/timePowerUp"
            android:layout_width="48dp"
            android:layout_height="60dp"
            android:layout_marginStart="120dp"
            android:background="@drawable/rounded_background_green"
            android:contentDescription="@string/add_time_icon"
            android:src="@drawable/ic_time" />


        <TextView
            android:id="@+id/addCount"
            android:layout_width="22dp"
            android:layout_height="23dp"
            android:layout_below="@id/timePowerUp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="-13dp"
            android:background="@drawable/circle_red"
            android:fontFamily="@font/roboto_black"
            android:text="@string/addCountNum"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="13sp" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/pauseMenuOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/gameOverMenuOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />


    <FrameLayout
        android:id="@+id/objectiveOverlayGame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/objectives_button_game"
        android:layout_width="85dp"
        android:layout_height="65dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="281dp"
        android:layout_marginBottom="587dp"
        android:background="@drawable/task_tab_game"
        android:contentDescription="@string/clipboard"
        android:src="@drawable/clip_board"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/lives_button"
        android:layout_width="85dp"
        android:layout_height="65dp"
        android:layout_marginTop="133dp"
        android:layout_marginEnd="281dp"
        android:layout_marginBottom="522dp"
        android:background="@drawable/lives_tab_game"
        android:contentDescription="Lives"
        android:src="@drawable/heart_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/objectiveCountGame"
        android:layout_width="22dp"
        android:layout_height="23dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="119dp"
        android:layout_marginEnd="274dp"
        android:layout_marginBottom="578dp"
        android:background="@drawable/circle_red"
        android:fontFamily="@font/roboto_black"
        android:text="@string/freezeCountNum"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/livesCountGame"
        android:layout_width="22dp"
        android:layout_height="23dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="186dp"
        android:layout_marginEnd="274dp"
        android:layout_marginBottom="511dp"
        android:background="@drawable/circle_red"
        android:fontFamily="@font/roboto_black"
        android:text="@string/freezeCountNum"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
