<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_inventory"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="648dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_black"
            android:text="INVENTORY"
            android:textColor="#2C1C1C"
            android:textSize="48sp"
            android:translationY="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_black"
            android:text="INVENTORY"
            android:textColor="#4E3A3A"
            android:textSize="48sp"
            android:translationY="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_black"
            android:text="INVENTORY"
            android:textColor="#FFFFFF"
            android:textSize="48sp" />
    </FrameLayout>


    <GridLayout
        android:id="@+id/inventoryGrid"
        android:layout_width="match_parent"
        android:layout_height="520dp"
        android:layout_gravity="center"
        android:layout_marginTop="83dp"
        android:layout_marginBottom="121dp"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:padding="16dp"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/livesIcon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="#6A4EB9"
                android:scaleType="fitCenter"
                android:src="@drawable/heart_icon" />

            <TextView
                android:id="@+id/livesCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="110dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/circle_red"
                android:fontFamily="@font/roboto_black"
                android:gravity="center"
                android:padding="6dp"
                android:text="4"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="65dp"
                android:fontFamily="@font/roboto_black"
                android:gravity="center"
                android:text="LIVES"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />


        </FrameLayout>

        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/powerupIcons"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="#4C49DD"
                android:scaleType="fitCenter"
                android:src="@drawable/powerup_combo" />

            <TextView
                android:id="@+id/powerupCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="110dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/circle_red"
                android:fontFamily="@font/roboto_black"
                android:gravity="center"
                android:padding="6dp"
                android:text="4"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="65dp"
                android:fontFamily="@font/roboto_black"
                android:gravity="center"
                android:text="POWER-UPS"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />


        </FrameLayout>

        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/songIcon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="#D93232"
                android:scaleType="fitCenter"
                android:src="@drawable/song_icon" />

            <TextView
                android:id="@+id/songCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="110dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/circle_red"
                android:fontFamily="@font/roboto_black"
                android:gravity="center"
                android:padding="6dp"
                android:text="4"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="65dp"
                android:fontFamily="@font/roboto_black"
                android:gravity="center"
                android:text="SONGS"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />


        </FrameLayout>

        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/skinIcon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="#59B937"
                android:scaleType="fitCenter"
                android:src="@drawable/skin_icon" />

            <TextView
                android:id="@+id/skinCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="110dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/circle_red"
                android:fontFamily="@font/roboto_black"
                android:gravity="center"
                android:padding="6dp"
                android:text="4"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="65dp"
                android:fontFamily="@font/roboto_black"
                android:gravity="center"
                android:text="SKINS"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />


        </FrameLayout>


    </GridLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/navigationMenu"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:layout_marginTop="608dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <FrameLayout
            android:id="@+id/playButton"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_marginStart="117dp"
            android:layout_marginEnd="118dp"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/playIcon"
                android:layout_width="wrap_content"
                android:layout_height="83dp"
                android:alpha="0.5"
                android:contentDescription="@string/play_icon"
                android:src="@drawable/play_button_icon" />


            <TextView
                android:id="@+id/shadow2mainMenu"
                android:layout_width="95dp"
                android:layout_height="98dp"
                android:layout_gravity="center"
                android:alpha="0.5"
                android:fontFamily="@font/roboto_black"
                android:paddingTop="35dp"
                android:text="@string/main_menu"
                android:textAlignment="center"
                android:textColor="#2C1C1C"
                android:textSize="25sp"
                android:translationY="6dp" />


            <TextView
                android:id="@+id/shadow1mainMenu"
                android:layout_width="95dp"
                android:layout_height="98dp"
                android:layout_gravity="center"
                android:alpha="0.5"
                android:fontFamily="@font/roboto_black"
                android:paddingTop="35dp"
                android:text="@string/main_menu"
                android:textAlignment="center"
                android:textColor="#4E3A3A"
                android:textSize="25sp"
                android:translationY="3dp" />


            <TextView
                android:id="@+id/mainMenu"
                android:layout_width="95dp"
                android:layout_height="98dp"
                android:layout_gravity="center"
                android:alpha="0.5"
                android:fontFamily="@font/roboto_black"
                android:paddingTop="35dp"
                android:text="@string/main_menu"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />
        </FrameLayout>


        <FrameLayout
            android:id="@+id/leaderboardButton"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="325dp"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">


            <ImageView
                android:id="@+id/leaderBoardIcon"
                android:layout_width="wrap_content"
                android:layout_height="83dp"
                android:layout_gravity="center"
                android:alpha="0.5"
                android:contentDescription="@string/leaderboard_icon"
                android:src="@drawable/leaderboard_icon" />


            <TextView
                android:id="@+id/shadow2Board"
                android:layout_width="95dp"
                android:layout_height="98dp"
                android:layout_gravity="center"
                android:alpha="0.5"
                android:fontFamily="@font/roboto_black"
                android:paddingTop="35dp"
                android:text="@string/leader_board"
                android:textColor="#2C1C1C"
                android:textSize="25sp"
                android:translationY="6dp" />


            <TextView
                android:id="@+id/shadow1Board"
                android:layout_width="95dp"
                android:layout_height="98dp"
                android:layout_gravity="center"
                android:alpha="0.5"
                android:fontFamily="@font/roboto_black"
                android:paddingTop="35dp"
                android:text="@string/leader_board"
                android:textColor="#4E3A3A"
                android:textSize="25sp"
                android:translationY="3dp" />


            <TextView
                android:id="@+id/leaderboard"
                android:layout_width="95dp"
                android:layout_height="98dp"
                android:layout_gravity="center"
                android:alpha="0.5"
                android:fontFamily="@font/roboto_black"
                android:paddingTop="35dp"
                android:text="@string/leader_board"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />
        </FrameLayout>


        <FrameLayout
            android:id="@+id/shopButton"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:layout_marginStart="325dp"
            android:background="@drawable/selected_button_background"
            android:gravity="end"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">


            <ImageView
                android:id="@+id/shopIcon"
                android:layout_width="wrap_content"
                android:layout_height="83dp"
                android:layout_gravity="center"
                android:contentDescription="@string/shop_icon"
                android:src="@drawable/shop_icon" />


            <TextView
                android:id="@+id/shadow2Shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_black"
                android:paddingTop="35dp"
                android:text="@string/shop"
                android:textColor="#2C1C1C"
                android:textSize="40sp"
                android:translationY="6dp" />


            <TextView
                android:id="@+id/shadow1Shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_black"
                android:paddingTop="35dp"
                android:text="@string/shop"
                android:textColor="#4E3A3A"
                android:textSize="40sp"
                android:translationY="3dp" />


            <TextView
                android:id="@+id/shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_black"
                android:paddingTop="35dp"
                android:text="@string/shop"
                android:textColor="#FFFFFF"
                android:textSize="40sp" />
        </FrameLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/exit_button_inventory"
        android:layout_width="45dp"
        android:layout_height="60dp"
        android:layout_marginStart="319dp"
        android:layout_marginBottom="664dp"
        android:contentDescription="Exit Button"
        android:paddingTop="5dp"
        android:src="@drawable/exit_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>